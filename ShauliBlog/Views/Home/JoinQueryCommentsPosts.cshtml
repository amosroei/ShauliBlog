@model IEnumerable<ShauliBlog.Controllers.HomeController.CommentsPosts>

@{
    ViewBag.Title = "Join Queries Example 1";
}
<h2>@ViewBag.Title</h2>

<!--This is a query that join between Comments and Posts tables-->
<p>This is a query that join between Comments and Posts tables</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CommentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Writer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Writer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostTitle)
            </td>
        </tr>
    }

</table>

<li>@Html.ActionLink("See Join Query between Posts and Categories", "JoinQueryPostCat", "Home")</li>
