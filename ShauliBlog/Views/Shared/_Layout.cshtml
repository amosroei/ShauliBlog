<!DOCTYPE html>
<html>
<head>
    <title>Browser Page title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/mycss.css" type="text/css" media="screen" />    
</head>

<body>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/weather.js"></script>

    <audio autoplay="">
        <source src="assets\audio\sound.mp3">
    </audio>

    <header id="siteHeader">
        <h1>Ha-Blog Shel Shauli</h1>
        @if (Session["UserName"] != null)
        {
            if (((ShauliBlog.Models.Account)Session["User"]).IsAdmin)
            {
                <h4> Admin</h4>
            }
            else
            {
                string uName = @Session["UserName"].ToString();
                <h4>Hello @Html.ActionLink(uName, "Details", "Account", new { id = Session["UserID"] }, null)</h4>
            }
            @Html.ActionLink("LogOut", "LogOut", "Account");

        }
    </header>
    <nav class="grad">
        <!-- Navigation -->
        <ul id="transDemo2">
            @*<li>@Html.ActionLink("LogIn", "Login", "Account")</li>*@
            <li>@Html.ActionLink("Blog", "Index", "Home")</li>
            <li>@Html.ActionLink("FanClub", "Index", "Fans")</li>
            @*<li>@Html.ActionLink("Posts", "Index", "Post")</li>*@
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
            <li class="subscribe" id="rss"><a href="#"><img src="~/images/rss.png" />Subscribe via. RSS</a></li>
        </ul>
    </nav>
    <section id="intro" class="grad">
        <!-- Introduction -->

        <header>
            <h2>Do you have questions for me?</h2>
        </header>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut.</p>
        <img alt="Shauli" src="~/images/intro_shauli.png">
    </section>

    <div>@*<a href="~/Post/Index"></a>*@</div>
    <img src="~/Post/Index" />

    <div id="content">
        <div id="mainContent">
            <section>
                @RenderBody()

            </section>

        </div>
        <aside>
            <section>
                <header>
                    <h3><button id="weatherBtn"class="btn btn-primary">Get Weather</button></h3>
                </header>
                <ul>
                    <li>
                        <script>
                            var appid = "2e9a3b3f3b7a98e0442e3a85875a2481";
                            $(document).ready(function () {
                                $("#weatherBtn").click(function () {
                                    $.get("http://api.openweathermap.org/data/2.5/weather?q=TelAviv&units=metric&APPID=" + appid + "&units=imperial", function (response) {
                                        //response
                                        console.log(response);
                                        $("#name").text(response.name);
                                        $("#temp").text(response.main.temp);
                                        $("#humidity").text(response.main.humidity);
                                    });
                                });
                            });

                        </script>
                    </li >
                </ul >
            </section >
                            <section>
                                <header>
                                    <h3>Archives</h3>
                                </header>
                                <ul>
                                    <li><a href="#">December 2008</a></li>
                                    <li><a href="#">January 2009</a></li>
                                    <li><a href="#">February 2009</a></li>
                                    <li><a href="#">March 2009</a></li>
                                </ul>
                            </section>

                            <section>
                                <h3>Community locations</h3>
                                <ul>

                                    <!DOCTYPE html>
                        <html>
                                        <head>
                                            <style>
                                                #map {
                                                    height: 300px;
                                                width: 100%;
                                             }
                                    </style>
                                        </head>
                                        <body>
                                            <div id="map"></div>
                                            <script>
                                                function initMap() {
                                            var startMap = {lat: -25.363, lng: 131.044};
                                            var map = new google.maps.Map(document.getElementById('map'), {zoom: 4, center: startMap});
                                            var marker = new google.maps.Marker({position: startMap, map: map });
                                            var marker = new google.maps.Marker({position: {lat: -25.363, lng: 151.044 }, map: map });
                                        }
    </script>
                                <script async defer
                                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBRchDroNLe-ud1nMkDSYOb8gmUrB_LJUM&callback=initMap">
                                </script>
                            </body>
                       </html>
                    </ul>
            </section>
        </aside>
    </div>


    <footer>
        <div>
            <section id="about">
                <header>
                    <h3>About</h3>
                </header>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut la</p>
            </section>
            <section id="blogroll">
                <header>
                    <h3>Blogroll</h3>
                </header>
                <ul>
                    <li><a href="#">NETTUTS+</a></li>
                    <li><a href="#">FreelanceSwitch</a></li>
                </ul>
            </section>
            <section id="popular">
                <header>
                    <h3>Popular</h3>
                </header>
                <ul>
                    <li><a href="#">This is the title of a blog post</a></li>
                    <li><a href="#">Lorem ipsum dolor sit amet</a></li>
                    <li><a href="#">Consectetur adipisicing elit, sed do eiusmod</a></li>
                </ul>
            </section>

        </div>

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>

